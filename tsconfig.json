{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "allowJs": true,
    "moduleResolution": "node",
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "lib": ["dom", "es2017"],
    "typeRoots": ["./typings", "./node_modules/@types"],
    "paths": {
      "@/*": ["app/*"],
      "@lib/*": ["app/lib/*"],
      "@components/*": ["app/components/*"],
      "@pages/*": ["app/pages/*"],
      "@static/*": ["app/static/*"],
      "@vars": ["app/variables/index"],
      "@vars/*": ["app/variables/*"]
    }
  },
  "include": ["app/**/*"],
  "exclude": ["node_modules/**", "**/*.spec", "app/out/**", "app/.next/**"]
}
