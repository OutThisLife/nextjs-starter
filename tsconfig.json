{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "allowJs": true,
    "moduleResolution": "node",
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "lib": ["dom", "es2017"],
    "typeRoots": ["./typings", "./node_modules/@types"],
    "paths": {
      "@types": ["typings/index.d.ts"],
      "@/*": ["app/*"],
      "@lib/*": ["app/lib/*"],
      "@components/*": ["app/components/*"],
      "@pages/*": ["app/pages/*"],
      "@static/*": ["app/static/*"],
      "@vars": ["app/variables/index"],
      "@vars/*": ["app/variables/*"]
    },
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ]
  },
  "include": ["app/**/*", "typings/*"],
  "exclude": ["**/*.spec", "app/out/**", "app/.next/**"]
}
